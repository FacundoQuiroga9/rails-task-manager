<h1>Lista de tareas</h1>

<ul>
  <% @tasks.each do |task| %>
  <%if task.completed%>
  <li><input type="checkbox" checked><%= link_to task.title, task_path(task)%><button><%= link_to "Delete",
  task_path(task),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
%></button></li>
  <%else%>
  <li><input type="checkbox"><%= link_to task.title, task_path(task)%><button><%= link_to "Delete",
  task_path(task),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
%></button></li>
  <%end%>
  <% end %>
</ul>